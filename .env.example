# Flight Deck Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001

# API Environment Switch (staging or production)
# This controls which API endpoints and tokens are used
# Set to 'staging' to use staging APIs, 'production' to use production APIs
API_ENV=staging

# Authentication
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback
SESSION_SECRET=your_secure_random_session_secret

# Skip authentication for local development (set to 'true' to bypass)
SKIP_AUTH=true

# Concord API URLs
CONCORD_STAGE_URL=https://concord-stage.sandsmedia.com/graphql
CONCORD_PROD_URL=https://concord.sandsmedia.com/graphql

# Concord API Tokens
CONCORD_STAGE_TOKEN=your_concord_staging_token
CONCORD_PROD_TOKEN=your_concord_production_token

# CAN API URLs
CAN_STAGE_URL=https://can-stage.sandsmedia.com/graphql
CAN_PROD_URL=https://can.sandsmedia.com/graphql

# CAN API Tokens
CAN_STAGE_TOKEN=your_can_staging_token
CAN_PROD_TOKEN=your_can_production_token

# Optional: Override API URLs (if you need custom endpoints)
# CONCORD_API_URL=https://concord-stage.sandsmedia.com/graphql
# CAN_API_URL=https://can-stage.sandsmedia.com/graphql

# Management Token (for remote management endpoints)
MANAGEMENT_TOKEN=flight-deck-management-2024
