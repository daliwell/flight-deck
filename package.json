{
  "name": "semantic-chunker",
  "version": "1.0.0",
  "description": "Node.js app for managing chunk audit POCs with MongoDB Atlas and Azure OpenAI",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:api": "jest --testPathPattern=tests/api",
    "test:frontend": "jest --testPathPattern=tests/frontend",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:ci": "jest --coverage --maxWorkers=2",
    "prepare": "husky || true"
  },
  "keywords": [
    "nodejs",
    "mongodb",
    "azure",
    "openai",
    "chunking"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.908.0",
    "body-parser": "^1.20.2",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "graphql-request": "^6.1.0",
    "html2plaintext": "^2.1.4",
    "jsdom": "^24.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^7.5.0",
    "openai": "^4.104.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.0.1",
    "puppeteer": "^21.11.0",
    "supertest": "^6.3.4"
  }
}
