{
  "name": "flight-deck",
  "version": "1.0.0",
  "description": "Flight Deck - Conference badge printing and attendee management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:api": "jest --testPathPattern=tests/api",
    "test:frontend": "jest --testPathPattern=tests/frontend",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:ci": "jest --coverage --maxWorkers=2",
    "prepare": "husky || true"
  },
  "keywords": [
    "nodejs",
    "conference",
    "badge-printing",
    "attendee-management",
    "graphql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.908.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "graphql-request": "^6.1.0",
    "idb": "^8.0.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "qr-scanner": "^1.4.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.0.1",
    "puppeteer": "^21.11.0",
    "supertest": "^6.3.4"
  }
}
