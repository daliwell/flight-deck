{
  "family": "flight-deck-fargate-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::151853531988:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "flight-deck",
      "image": "151853531988.dkr.ecr.eu-west-1.amazonaws.com/flight-deck:latest",
      "portMappings": [
        {
          "containerPort": 3005,
          "protocol": "tcp"
        }
      ],
      "secrets": [
        {
          "name": "PORT",
          "valueFrom": "arn:aws:ssm:eu-west-1:151853531988:parameter/flight-deck/prod/PORT"
        },
        {
          "name": "NODE_ENV",
          "valueFrom": "arn:aws:ssm:eu-west-1:151853531988:parameter/flight-deck/prod/NODE_ENV"
        },
        {
          "name": "API_ENV",
          "valueFrom": "arn:aws:ssm:eu-west-1:151853531988:parameter/flight-deck/prod/API_ENV"
        },
        {
          "name": "GOOGLE_CLIENT_ID",
          "valueFrom": "arn:aws:ssm:eu-west-1:151853531988:parameter/flight-deck/prod/GOOGLE_CLIENT_ID"
        },
        {
          "name": "GOOGLE_CLIENT_SECRET",
          "valueFrom": "arn:aws:ssm:eu-west-1:151853531988:parameter/flight-deck/prod/GOOGLE_CLIENT_SECRET"
        },
        {
          "name": "GOOGLE_CALLBACK_URL",
          "valueFrom": "arn:aws:ssm:eu-west-1:151853531988:parameter/flight-deck/prod/GOOGLE_CALLBACK_URL"
        },
        {
          "name": "SESSION_SECRET",
          "valueFrom": "arn:aws:ssm:eu-west-1:151853531988:parameter/flight-deck/prod/SESSION_SECRET"
        },
        {
          "name": "CONCORD_STAGE_TOKEN",
          "valueFrom": "arn:aws:ssm:eu-west-1:151853531988:parameter/flight-deck/prod/CONCORD_STAGE_TOKEN"
        },
        {
          "name": "CONCORD_PROD_TOKEN",
          "valueFrom": "arn:aws:ssm:eu-west-1:151853531988:parameter/flight-deck/prod/CONCORD_PROD_TOKEN"
        },
        {
          "name": "CAN_STAGE_TOKEN",
          "valueFrom": "arn:aws:ssm:eu-west-1:151853531988:parameter/flight-deck/prod/CAN_STAGE_TOKEN"
        },
        {
          "name": "CAN_PROD_TOKEN",
          "valueFrom": "arn:aws:ssm:eu-west-1:151853531988:parameter/flight-deck/prod/CAN_PROD_TOKEN"
        },
        {
          "name": "MANAGEMENT_TOKEN",
          "valueFrom": "arn:aws:ssm:eu-west-1:151853531988:parameter/flight-deck/prod/MANAGEMENT_TOKEN"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/flight-deck",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "node healthcheck.js || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}